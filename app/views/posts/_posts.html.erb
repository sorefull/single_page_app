<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, class: :to_form, remote: true %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: :to_form, remote: true %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class: :delete_post, remote: true %></td>
      </tr>
    <% end %>
   </tbody>
</table>
